  }
  
  $url = igcommerce_utility_url_get_locale_path($path, $language->language);
  if(!empty($url)) {
    $path = $url;
  }
}

function igcommerce_utility_format_search_terms($string) {
  $terms = explode(' ', $string);
  $query = array();
  $terms[] = $string;
  foreach ($terms as $term) {
    $query[] = $term;
    $query[] = '*' . $term;
    $query[] = $term . '*';
    $query[] = '*' . $term . '*';
  }
  
  return '(' . implode(' OR ', $query) . ')';
}


